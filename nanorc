set autoindent
set casesensitive
set constantshow
set historylog
set linenumbers
set locking
set multibuffer
set nohelp
set nowrap
set softwrap
# Necessario instalar o aspell para usar o set spell
# sudo apt install aspell aspell-pt-br libaspell15
set speller "aspell -x -c"
set suspend
set tabsize 4
